<h1><%= @user.email %> 님의 프로필 입니다.</h1>

<%= image_tag gravatar_url(current_user.email,64), alt: @profile.name %>
<%= link_to fa_icon('edit 2x'), edit_profile_path %>    

<p><%= @profile.name %></p>
<p><%= @profile.address %></p>
<p><%= @profile.mobile %></p>
<p><%= @profile.birth %></p>

<div class="row">
    <div class="col-md-4">
        <h2>Following Songs</h2>
        <ul>
            <% @user.following_songs.each do |song| %>
                <li>
                    <%= image_tag song.cover.thumb.url if song.cover? %>
                    <%= link_to song.title, song %>
                </li>
            <% end %>
        </ul>
    </div>
    
    <div class="col-md-4">
        <h2>Following artists</h2>
        <ul>
            <% @user.following_artists.each do |artist| %>
                <li>
                    <%= image_tag artist.image.thumb.url if artist.image? %>
                    <%= link_to artist.title, artist %>
                </li>
            <% end %>
        </ul>
    </div>
    
    <div class="col-md-4">
        <h2>My articles</h2>
        <ul>
            <% @user.articles.each do |article| %>
                <li>
                    <%= link_to article.title, article %>
                </li>
            <% end %>
        </ul>
    </div>    
</div>
